{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true,
    "allowJs": true,
    "jsx": "react",
    "lib": ["dom", "es7"],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "target": "es5",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "demo"]
}
